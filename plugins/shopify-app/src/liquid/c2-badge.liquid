{%- comment -%} C2 Concierge badge/snippet {%- endcomment -%}
{%- assign mf = product.metafields.c2.manifest -%}
{%- if mf and mf.value -%}
  {%- comment -%} Emit manifest link in head {%- endcomment -%}
  <link rel="c2pa-manifest" href="{{ mf.value | escape }}" data-asset="{{ product.featured_image.src | escape }}">
  
  {%- comment -%} C2 Badge for featured image {%- endcomment -%}
  {%- if product.featured_image -%}
    <c2-badge 
      data-manifest-url="{{ mf.value | escape }}" 
      data-asset-url="{{ product.featured_image.src | escape }}"
      data-product-id="{{ product.id }}"
      data-shop-domain="{{ shop.domain }}"
    ></c2-badge>
  {%- endif -%}
  
  {%- comment -%} C2 Badges for all product images {%- endcomment -%}
  {%- for image in product.images -%}
    {%- assign image_mf = image.metafields.c2.manifest -%}
    {%- if image_mf and image_mf.value -%}
      <c2-badge 
        data-manifest-url="{{ image_mf.value | escape }}" 
        data-asset-url="{{ image.src | escape }}"
        data-product-id="{{ product.id }}"
        data-image-id="{{ image.id }}"
        data-shop-domain="{{ shop.domain }}"
      ></c2-badge>
    {%- endif -%}
  {%- endfor -%}
{%- endif -%}
