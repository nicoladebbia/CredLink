# Production environment variable values
# Copy this file to terraform.tfvars and update with actual values

# Cloudflare configuration
cloudflare_api_token = "your-cloudflare-api-token"
cloudflare_account_id = "your-cloudflare-account-id"
cloudflare_zone_id = "your-cloudflare-zone-id"

# AWS configuration (for S3 alternative)
aws_region = "us-east-1"
kms_key_id = ""  # Optional: KMS key for S3 encryption

# Storage configuration
use_r2 = true
storage_destroy_protect = true

# Worker configuration
worker_routes = [
  "credlink.com/manifest/*",
  "credlink.com/api/*",
  "api.credlink.com/*"
]
worker_static_assets_enabled = true

# Health check configuration
health_check_urls = [
  "https://credlink.com/health/cache",
  "https://credlink.com/health/rehydration",
  "https://credlink.com/health/worker",
  "https://api.credlink.com/health"
]

# Alert channels
alert_channels = {
  "email" = {
    type   = "email"
    target = "alerts@credlink.com"
  }
  "slack" = {
    type   = "webhook"
    target = "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
  }
  "pagerduty" = {
    type   = "pagerduty"
    target = "YOUR_PAGERDUTY_INTEGRATION_KEY"
  }
}

# IAM token scopes
iam_token_scopes = {
  "storage" = ["read", "write"]
  "worker"  = ["script:edit", "route:edit"]
  "queue"   = ["read", "write"]
}

# Cost configuration
enable_cost_tags = true

# OpenTelemetry configuration
enable_otel_collector = true
otlp_endpoint = "https://otel-collector.credlink.com:4317"
otlp_api_key = "your-otlp-api-key-here"  # Required for secure telemetry export

# Security configuration - Production hardened settings
enable_audit_logging = true
alert_severity_threshold = "HIGH"  # Only high and critical alerts in production
enable_real_time_alerts = true
alert_email = "security-alerts@credlink.com"
alert_webhook = "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# Rate limiting and security headers - Production strict limits
rate_limiting_enabled = true
requests_per_minute = 2000  # Higher capacity but still controlled
burst_size = 200
allowed_countries = ["US", "CA", "GB", "AU", "DE", "FR", "JP", "SG"]
blocked_countries = ["CN", "RU", "KP", "IR", "AF", "MM"]
allowed_ip_ranges = ["10.0.0.0/8", "192.168.0.0/16", "203.0.113.0/24", "198.51.100.0/24"]
security_headers_enabled = true

# Vault secrets management - Production mandatory
use_vault_secrets = true
vault_address = "https://vault.credlink.com"
vault_token = "your-vault-token"

# VPC endpoint configuration - Production required
vpc_endpoint_id = "vpce-12345678"  # Your actual VPC endpoint ID

# Additional production security settings
enable_log_aggregation = true
log_aggregation_endpoint = "https://log-aggregator.credlink.com"
token_ttl_seconds = 3600  # 1 hour token rotation for production
