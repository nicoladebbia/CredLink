{
  "dashboard": {
    "title": "CredLink Sign Service",
    "tags": ["credlink", "sign-service", "c2pa"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"credlink-sign-service\"}[5m])",
            "legendFormat": "{{method}} {{route}} {{status_code}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Request Latency (P50, P95, P99)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"credlink-sign-service\"}[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"credlink-sign-service\"}[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"credlink-sign-service\"}[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(image_signing_errors_total{job=\"credlink-sign-service\"}[5m])",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "errps", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Success Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(image_signing_total{success=\"true\"}[5m])) / sum(rate(image_signing_total[5m]))",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Success Rate", "max": 1, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Image Signing Duration by Format",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(image_signing_duration_seconds_bucket{job=\"credlink-sign-service\"}[5m]))",
            "legendFormat": "{{format}} P95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Image Size Distribution",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(image_size_bytes_bucket{job=\"credlink-sign-service\"}[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(image_size_bytes_bucket{job=\"credlink-sign-service\"}[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Size"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Active Requests",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "http_requests_in_progress{job=\"credlink-sign-service\"}",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Requests"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Proof Storage Size",
        "type": "graph",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "proof_storage_size_total{job=\"credlink-sign-service\"}",
            "legendFormat": "Total Proofs",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Proofs"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "HTTP Status Codes",
        "type": "graph",
        "gridPos": {"x": 0, "y": 32, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"credlink-sign-service\",status_code=~\"2..\"}[5m])",
            "legendFormat": "2xx Success",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{job=\"credlink-sign-service\",status_code=~\"4..\"}[5m])",
            "legendFormat": "4xx Client Error",
            "refId": "B"
          },
          {
            "expr": "rate(http_requests_total{job=\"credlink-sign-service\",status_code=~\"5..\"}[5m])",
            "legendFormat": "5xx Server Error",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      }
    ]
  }
}
