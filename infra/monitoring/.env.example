# Monitoring Stack Environment Variables
# Copy this to .env and set secure passwords
#
# IMPORTANT: These values are REQUIRED - the monitoring stack will NOT start without them.
# Generate secure passwords with: openssl rand -base64 32

# Grafana Admin Password (REQUIRED - must be strong)
# Generate: openssl rand -base64 32
GRAFANA_ADMIN_PASSWORD=REPLACE_WITH_STRONG_PASSWORD

# Grafana Secret Key (REQUIRED - used for signing cookies and session data)
# Generate: openssl rand -base64 32
GRAFANA_SECRET_KEY=REPLACE_WITH_RANDOM_SECRET_KEY

# Prometheus Basic Auth (optional but recommended)
PROM_ADMIN_USER=admin
PROM_ADMIN_PASSWORD_HASH=hashed-password-here

# Alertmanager Configuration
ALERTMANAGER_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERTMANAGER_PAGERDUTY_KEY=your-pagerduty-integration-key

# Email Alerts (optional)
SMTP_FROM=alerts@credlink.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
