# Phase 56 Partner Marketplace - Environment Configuration

# Application
NODE_ENV=production
PORT=3001
BASE_URL=https://partners.c2concierge.com
API_VERSION=v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=c2pa_marketplace
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_TLS=true
REDIS_DB=0

# Authentication & Security
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRY=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_minimum_32_characters
REFRESH_TOKEN_EXPIRY=7d
ATTRIBUTION_SECRET=your_attribution_secret_here_minimum_32_characters
WEBHOOK_SECRET=your_webhook_secret_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_characters
CSRF_SECRET=your_csrf_secret_here_minimum_32_characters

# Encryption
ENCRYPTION_KEY=your_encryption_key_here_32_bytes
ENCRYPTION_ALGORITHM=aes-256-gcm

# Stripe Connect
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CONNECT_CLIENT_ID=ca_your_connect_client_id

# CRM Integration (Salesforce)
CRM_URL=https://your-instance.salesforce.com
CRM_CLIENT_ID=your_salesforce_client_id
CRM_CLIENT_SECRET=your_salesforce_client_secret
CRM_USERNAME=your_salesforce_username
CRM_PASSWORD=your_salesforce_password
CRM_SECURITY_TOKEN=your_salesforce_security_token

# Google Analytics 4
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_SECRET=your_ga4_api_secret
GA4_PROPERTY_ID=properties/123456789

# Amplitude Analytics
AMPLITUDE_API_KEY=your_amplitude_api_key
AMPLITUDE_SECRET_KEY=your_amplitude_secret_key

# Segment Analytics
SEGMENT_WRITE_KEY=your_segment_write_key

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=partners@c2concierge.com
SENDGRID_FROM_NAME=C2PA Partner Program

# AWS Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=c2pa-partner-assets
AWS_CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# Badge Generation
BADGE_STORAGE_PATH=/var/www/badges
BADGE_CDN_URL=https://cdn.c2concierge.com/badges

# Evidence Pack Storage
EVIDENCE_PACK_BUCKET=c2pa-evidence-packs
EVIDENCE_PACK_RETENTION_DAYS=2555

# Monitoring & Logging
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Commission Processing
COMMISSION_MINIMUM_PAYOUT=100
COMMISSION_PLATFORM_FEE=0.08
COMMISSION_PAYOUT_NET_DAYS=30
COMMISSION_ATTRIBUTION_WINDOW_DAYS=60

# MDF Budgets
MDF_ADVANCED_QUARTERLY_MAX=5000
MDF_PREMIER_QUARTERLY_MAX=15000
MDF_APPROVAL_THRESHOLD=1000

# Performance Thresholds
TTI_THRESHOLD_INSTALLER=1200000
TTI_THRESHOLD_AUDITOR=14400000
TTI_THRESHOLD_ENTERPRISE=86400000
SURVIVAL_RATE_MINIMUM=0.999
NPS_MINIMUM_ADVANCED=50
NPS_MINIMUM_PREMIER=60

# Probation Settings
PROBATION_PERIOD_DAYS=60
PROBATION_EXTENSION_DAYS=30
PROBATION_MAX_EXTENSIONS=2

# Certification
CERTIFICATION_EXPIRY_MONTHS=12
RECERTIFICATION_REMINDER_DAYS=30
CERTIFICATION_QUIZ_PASS_SCORE=85

# Directory & Ranking
DIRECTORY_RESULTS_PER_PAGE=20
DIRECTORY_MAX_RESULTS=100
RANKING_CACHE_TTL=3600

# Webhook Retry
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_MS=5000
WEBHOOK_TIMEOUT_MS=10000

# Security Headers
CORS_ORIGIN=https://c2concierge.com,https://partners.c2concierge.com
CORS_CREDENTIALS=true
CSP_DIRECTIVES=default-src 'self'; script-src 'self' https://www.google-analytics.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self' https://api.stripe.com https://www.google-analytics.com; frame-src 'self' https://js.stripe.com; object-src 'none'; base-uri 'self'; form-action 'self'
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Feature Flags
FEATURE_MDF_ENABLED=true
FEATURE_COSELL_ENABLED=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AUTOMATED_PAYOUTS=true
FEATURE_REAL_TIME_ATTRIBUTION=true

# Testing & Development
TEST_MODE=false
MOCK_STRIPE=false
MOCK_CRM=false
MOCK_ANALYTICS=false
SEED_DATABASE=false

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=c2pa-marketplace-backups

# Compliance & Audit
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
GDPR_COMPLIANCE_MODE=true
SOC2_AUDIT_MODE=true

# Performance Monitoring
APM_ENABLED=true
APM_SAMPLE_RATE=0.1
METRICS_EXPORT_INTERVAL=60000

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# Notification Settings
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_WEBHOOK_ENABLED=true
NOTIFICATION_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
