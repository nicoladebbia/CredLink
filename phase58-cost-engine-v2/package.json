{
  "name": "phase58-cost-engine-v2",
  "version": "1.0.0",
  "description": "Phase 58 - Cost Engine v2 (FinOps): Predict and prevent margin erosion with real-time cost allocation, anomaly detection, and auto-remediation",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:exit": "node tests/exit-tests/validate-exit-criteria.js",
    "ingest:aws": "node ingestion/aws-cur/cur-reader.js",
    "ingest:cloudflare": "node ingestion/cloudflare-logpush/logpush-reader.js",
    "detect": "node detection/anomaly-detector.js",
    "allocate": "node allocation/allocator.js",
    "dashboard": "node dashboards/server.js",
    "lint": "eslint src/**/*.js ingestion/**/*.js allocation/**/*.js detection/**/*.js policy/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "validate:all": "npm run lint && npm run test && npm run test:exit"
  },
  "keywords": [
    "finops",
    "cost-management",
    "aws-cur",
    "cloudflare",
    "anomaly-detection",
    "cost-allocation",
    "margin-optimization",
    "c2pa"
  ],
  "author": "C2PA Concierge Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/client-glue": "^3.490.0",
    "@aws-sdk/client-athena": "^3.490.0",
    "@aws-sdk/client-sns": "^3.490.0",
    "@aws-sdk/client-cost-explorer": "^3.490.0",
    "duckdb": "^0.9.2",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "@types/node": "^20.10.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "ingestion/**/*.js",
      "allocation/**/*.js",
      "detection/**/*.js",
      "policy/**/*.js",
      "!**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ],
    "transform": {}
  }
}
