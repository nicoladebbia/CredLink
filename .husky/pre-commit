#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting
echo "Running linter..."
pnpm run lint || exit 1

# Run type checking
echo "Running type check..."
pnpm run build || exit 1

# Run tests (fast ones only)
echo "Running tests..."
pnpm test -- --bail --findRelatedTests --passWithNoTests || exit 1

echo "âœ… Pre-commit checks passed"
