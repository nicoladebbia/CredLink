{
  "name": "@c2pa/api",
  "version": "1.0.0",
  "description": "C2PA Verification API Server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "start:test": "NODE_ENV=test node dist/index.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:security": "jest --testPathPattern=security.test.ts --coverage",
    "test:integration:security": "jest --testPathPattern=integration.security.test.ts",
    "test:penetration": "jest --testPathPattern=penetration.test.ts",
    "test:container:security": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "test:dos:resistance": "artillery run dos-resistance-test.yml",
    "test:all:security": "npm run test:security && npm run test:integration:security && npm run test:penetration",
    "lint": "eslint src --ext .ts",
    "lint:security": "eslint src --ext .ts --config .eslintrc.security.js",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit && snyk test",
    "security:scan": "semgrep --config=auto src/",
    "security:report": "node scripts/generate-security-report.js",
    "security:performance:report": "node scripts/generate-performance-security-report.js",
    "compliance:gdpr:check": "node scripts/gdpr-compliance-check.js",
    "compliance:soc2:check": "node scripts/soc2-compliance-check.js",
    "compliance:iso27001:check": "node scripts/iso27001-compliance-check.js",
    "security:fix": "npm audit fix && snyk wizard"
  },
  "keywords": [
    "c2pa",
    "api",
    "verification",
    "video",
    "audio"
  ],
  "author": "C2PA Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.2",
    "artillery": "^2.0.0",
    "nock": "^13.3.2",
    "frisby": "^2.1.3"
  },
  "dependencies": {
    "fastify": "^4.15.0",
    "@fastify/cors": "^8.2.0",
    "@c2pa/trust": "workspace:*",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.7",
    "bcrypt": "^5.1.0",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "winston": "^3.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/c2pa/credlink.git",
    "directory": "apps/api"
  },
  "bugs": {
    "url": "https://github.com/c2pa/credlink/issues"
  },
  "homepage": "https://github.com/c2pa/credlink#readme"
}
