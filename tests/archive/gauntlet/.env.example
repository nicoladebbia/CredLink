# C2C Hostile CDN Gauntlet Environment Configuration

# Network Configuration
TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# Rate Limiting (to prevent IP bans)
REQUESTS_PER_SECOND=10
BURST_SIZE=20

# C2PA Tool Configuration
C2PATOOL_PATH=c2patool
TEMP_DIR=/tmp/gauntlet

# Provider Endpoints (replace with actual CDN domains)
CLOUDFLARE_BASE_URL=https://cf.survival.test
IMGIX_BASE_URL=https://imgix.survival.test
CLOUDINARY_BASE_URL=https://res.cloudinary.com/demo/image/fetch
FASTLY_BASE_URL=https://fastly.survival.test
AKAMAI_BASE_URL=https://akamai.survival.test

# Origin Configuration
ORIGIN_BASE_URL=https://origin.survival.test/gauntlet/corpus
MANIFEST_BASE_URL=https://manifests.survival.test

# Security
ALLOWED_HOSTS=cf.survival.test,imgix.survival.test,cloudinary.survival.test,fastly.survival.test,akamai.survival.test,origin.survival.test,manifests.survival.test

# Output Configuration
OUTPUT_DIR=./output
REPORTS_DIR=./docs/survival-reports

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# GitHub Integration (for P0 incidents)
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=credlink/hostile-cdn-gauntlet
GITHUB_OWNER=credlink

# AWS Integration (for report storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=c2c-gauntlet-reports

# Slack Integration (for notifications)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_EMBED_TESTING=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_VALIDATION=true
ENABLE_MOCK_PROVIDERS=false
