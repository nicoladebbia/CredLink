{
  "name": "credlink-hostile-cdn-gauntlet",
  "version": "1.0.0",
  "description": "Vendor-neutral C2PA Content Credentials survival testing across major CDN providers",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build-urls": "ts-node src/buildUrls.ts",
    "test": "npm run build && node dist/run.js",
    "test:remote": "ts-node src/probes/remote.ts",
    "test:embed": "ts-node src/probes/embed.ts",
    "test:dry-run": "npm run build && node dist/run.js --dry-run",
    "test:offline": "npm run build && node dist/run.js --offline",
    "report": "ts-node src/report/html.ts",
    "report:json": "ts-node src/report/json.ts",
    "diff": "ts-node src/diff.ts",
    "clean": "rm -rf output dist",
    "dev": "ts-node --watch src/run.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "validate": "npm run lint && npm run build && npm run test:dry-run",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js"
  },
  "keywords": [
    "c2pa",
    "content-credentials",
    "cdn",
    "image-optimization",
    "testing",
    "cloudflare",
    "imgix",
    "cloudinary",
    "fastly",
    "akamai",
    "metadata",
    "provenance"
  ],
  "author": "CredLink Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/credlink/hostile-cdn-gauntlet.git"
  },
  "bugs": {
    "url": "https://github.com/credlink/hostile-cdn-gauntlet/issues"
  },
  "homepage": "https://docs.credlink.com/survival-reports/latest/",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "cli-table3": "^0.6.3",
    "inquirer": "^8.2.6",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/js-yaml": "^4.0.8",
    "@types/inquirer": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "tsconfig-paths": "^4.2.0"
  },
  "bin": {
    "gauntlet": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "providers/",
    "matrix.yaml",
    "README.md",
    "recipes.md"
  ],
  "config": {
    "output_dir": "./output",
    "reports_dir": "./docs/survival-reports",
    "timeout": 30000,
    "retry_attempts": 3,
    "concurrency": 10
  },
  "gauntlet": {
    "version": "1.0",
    "providers": [
      "cloudflare",
      "imgix", 
      "cloudinary",
      "fastly",
      "akamai"
    ],
    "transforms": [
      "resize_1024",
      "q_75",
      "format_webp",
      "format_avif",
      "crop_1x1_center",
      "progressive_jpeg",
      "rotate_90",
      "sharpen",
      "gamma",
      "png_to_jpg",
      "dpr_2",
      "provider_auto_optimize"
    ],
    "routes": [
      "preserve-embed",
      "strip-happy",
      "remote-only"
    ],
    "success_criteria": {
      "remote_survival_threshold": 99.9,
      "embed_survival_threshold": 0.0,
      "max_failures_remote": 1
    }
  }
}
