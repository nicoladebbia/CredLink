{
  "name": "@credlink/acceptance-cms",
  "version": "0.1.0",
  "description": "C2 Concierge CMS acceptance testing framework",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "npm run build && node dist/index.js --skip-browsers",
    "test:wp": "npm run build && node dist/wp-test.js --skip-browsers",
    "test:shopify": "npm run build && node dist/shopify-test.js --skip-browsers",
    "test:full": "npm run build && node dist/index.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "yaml": "^2.3.4",
    "csv-writer": "^1.6.0",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "c2pa",
    "acceptance-testing",
    "cms",
    "wordpress",
    "shopify"
  ],
  "author": "C2 Concierge Team",
  "license": "MIT"
}
