{
  "targets": [
    {
      "id": "spec-html",
      "url": "https://c2pa.org/specifications/specifications/2.2/specs/C2PA_Specification.html",
      "type": "html",
      "selector": "main.content, .spec-content, article",
      "interval": 24,
      "enabled": true
    },
    {
      "id": "spec-pdf",
      "url": "https://spec.c2pa.org/specifications/specifications/2.2/specs/_attachments/C2PA_Specification.pdf",
      "type": "pdf",
      "interval": 24,
      "enabled": true
    },
    {
      "id": "guidance",
      "url": "https://c2pa.org/specifications/specifications/2.2/guidance/Guidance.html",
      "type": "html",
      "selector": "main.content, .guidance-content, article",
      "interval": 24,
      "enabled": true
    },
    {
      "id": "security",
      "url": "https://c2pa.org/specifications/specifications/2.0/security/Security_Considerations.html",
      "type": "html",
      "selector": "main.content, .security-content, article",
      "interval": 24,
      "enabled": true
    },
    {
      "id": "spec-issues",
      "url": "https://api.github.com/repos/c2pa-org/specifications/issues",
      "type": "github-api",
      "headers": {
        "Accept": "application/vnd.github.v3+json"
      },
      "interval": 12,
      "enabled": true
    },
    {
      "id": "spec-prs",
      "url": "https://api.github.com/repos/c2pa-org/specifications/pulls",
      "type": "github-api",
      "headers": {
        "Accept": "application/vnd.github.v3+json"
      },
      "interval": 12,
      "enabled": true
    },
    {
      "id": "c2patool-changelog",
      "url": "https://opensource.contentauthenticity.org/docs/c2patool/docs/changelog/",
      "type": "html",
      "selector": ".markdown-body, .content, main",
      "interval": 24,
      "enabled": true
    },
    {
      "id": "rust-sdk-releases",
      "url": "https://opensource.contentauthenticity.org/docs/rust-sdk/docs/release-notes/",
      "type": "html",
      "selector": ".markdown-body, .content, main",
      "interval": 24,
      "enabled": true
    },
    {
      "id": "cai-verify-changelog",
      "url": "https://opensource.contentauthenticity.org/docs/verify-tool/docs/changelog/",
      "type": "html",
      "selector": ".markdown-body, .content, main",
      "interval": 24,
      "enabled": true
    },
    {
      "id": "conformance-news",
      "url": "https://contentauthenticity.org/news",
      "type": "html",
      "selector": ".news-list, .updates, article",
      "interval": 48,
      "enabled": true
    }
  ],
  "interval_hours": 24,
  "gauntlet_enabled": true,
  "notification_enabled": true,
  "storage": {
    "redis": {
      "host": "localhost",
      "port": 6379,
      "db": 1
    },
    "artifacts": {
      "base_path": "./artifacts",
      "retention_days": 90
    }
  }
}
