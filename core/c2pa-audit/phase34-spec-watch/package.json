{
  "name": "@c2pa/spec-watch",
  "version": "1.1.0",
  "description": "C2PA Spec Watch & Contributions System - Continuous tracking of core spec changes",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:security": "npm audit --audit-level=high",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit --skipLibCheck",
    "security-scan": "npm audit --audit-level=moderate",
    "run-gauntlet": "tsx src/gauntlet/test-runner.ts",
    "generate-report": "tsx src/reporters/quarterly-reporter.ts",
    "clean": "rm -rf dist artifacts",
    "pre-commit": "npm run type-check && npm run lint && npm run test:security"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.3",
    "ioredis": "^5.3.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4",
    "nanoid": "^5.0.4",
    "node-cron": "^3.0.3",
    "cheerio": "^1.0.0-rc.12",
    "pdf-parse": "^1.1.1",
    "node-fetch": "^3.3.2",
    "rss-parser": "^3.13.0",
    "@octokit/rest": "^20.0.2",
    "diff": "^5.1.0",
    "lodash": "^4.17.21",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/lodash": "^4.14.202",
    "@types/diff": "^5.0.8",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "c2pa",
    "specification",
    "watching",
    "compliance",
    "manifest",
    "authenticity",
    "security",
    "audit"
  ],
  "author": "C2PA Audit Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/c2pa-org/spec-watch"
  },
  "bugs": {
    "url": "https://github.com/c2pa-org/spec-watch/issues"
  },
  "homepage": "https://github.com/c2pa-org/spec-watch#readme"
}
