# Phase 35 Public Survival Leaderboard - Environment Configuration
# Copy this file to .env and update values for your environment

# Server Configuration
HOST=0.0.0.0
PORT=3001
TRUST_PROXY=false
BODY_LIMIT=10485760
REQUEST_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=info
NODE_ENV=development

# Testing Configuration
OUTPUT_DIR=./artifacts
C2PATOOL_PATH=c2patool
VERIFY_TOOL_PATH=cai-verify
TEST_TIMEOUT=30000
MAX_CONCURRENT_TESTS=5
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# Leaderboard Configuration
UPDATE_SCHEDULE=0 2 * * 1
RETENTION_DAYS=90
PUBLIC_RESULTS_URL=https://leaderboard.c2pa.org/data

# Security Configuration
ENABLE_SECURITY_HEADERS=true
RATE_LIMIT_WINDOW=3600000
MAX_REQUESTS=1000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# External Service Configuration
GITHUB_TOKEN=
C2PA_VERIFY_API_URL=https://verify.contentauthenticity.org/api

# Monitoring and Analytics
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# Development Configuration
DEBUG=false
MOCK_EXTERNAL_SERVICES=false
SKIP_AUTH=false

# Production Configuration
SSL_CERT_PATH=
SSL_KEY_PATH=
CLUSTER_MODE=false
WORKER_PROCESSES=0

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=
S3_BACKUP_REGION=

# Email Configuration (for corrections and notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@c2pa.org

# Webhook Configuration
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# API Keys
CAI_API_KEY=
CLOUDFLARE_API_TOKEN=
FASTLY_API_KEY=

# Database Configuration (if using PostgreSQL instead of Redis)
DATABASE_URL=
DATABASE_POOL_SIZE=10

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting per User
USER_RATE_LIMIT=100
IP_RATE_LIMIT=1000

# Content Validation
MAX_UPLOAD_SIZE=52428800
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,image/avif

# Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024
STATIC_CACHE_TTL=86400

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_REAL_TIME_UPDATES=false

# Vendor-specific Configuration
CLOUDFLARE_ACCOUNT_ID=
FASTLY_SERVICE_ID=
AKAMAI_CONTRACT_ID=
CLOUDINARY_CLOUD_NAME=
IMGIX_DOMAIN=

# Testing Assets Configuration
TEST_ASSETS_URL=https://opensource.contentauthenticity.org/demo-images
TEST_ASSETS_CDN=https://cdn.c2pa.org/test-assets

# Security Headers
CUSTOM_CSP=
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# Monitoring Endpoints
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Development Tools
HOT_RELOAD=true
SOURCE_MAPS=true
VERBOSE_LOGGING=false
