# C2PA Reverse Lab - Secure Environment Configuration
# Copy this file to .env and update with your specific values

# Server Configuration
PORT=3000
HOST=localhost

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
GLOBAL_RATE_LIMIT=100
PROVIDER_RATE_LIMIT=10

# Scheduling (Cron Patterns)
WEEKLY_JOB_CRON="0 2 * * 1"    # Monday at 2:00 AM
DAILY_CHECK_CRON="0 6 * * *"   # Daily at 6:00 AM

# Timeouts (milliseconds)
JOB_TIMEOUT=3600000           # 1 hour
REQUEST_TIMEOUT=30000         # 30 seconds
VERIFICATION_TIMEOUT=15000    # 15 seconds

# Feature Flags
FEATURE_DOCS=true
FEATURE_CHANGE_DETECTION=true
FEATURE_AUTO_RULES=true
FEATURE_WEEKLY_REPORTS=true

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Provider-specific Settings
CLOUDFLARE_RATE_LIMIT=5
FASTLY_RATE_LIMIT=10
AKAMAI_RATE_LIMIT=8
CLOUDINARY_RATE_LIMIT=15
IMGIX_RATE_LIMIT=12

# Cache Settings
CACHE_TTL=3600                # 1 hour
DOCS_CACHE_TTL=86400          # 24 hours
PROFILE_CACHE_TTL=604800      # 7 days

# Security
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Development
NODE_ENV=development
DEBUG=reverse-lab:*

# Testing (override for test environment)
TEST_REDIS_DB=15
TEST_PORT=3001
TEST_TIMEOUT=300000           # 5 minutes for tests

# Security Settings
# Set to 'true' in production with HTTPS
ENABLE_HTTPS=false
CORS_ORIGIN=https://yourdomain.com

# Redis TLS (enable for remote Redis)
REDIS_TLS=false
