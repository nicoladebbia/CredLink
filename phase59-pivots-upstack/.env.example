# Phase 59 - Pivots Up-Stack Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=phase59_custody
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# FIPS Configuration
FIPS_ENABLED=true

# Custody Configuration
DEFAULT_ROTATION_DAYS=90
ROTATION_APPROVER=security-team

# CloudHSM Configuration (optional)
CLOUDHSM_CLUSTER_ID=cluster-abc123def456

# YubiHSM Configuration (optional)
YUBIHSM_DEVICE_SERIAL=1234567890
YUBIHSM_CONNECTOR_URL=http://localhost:12345

# TSA Configuration (RFC 3161 timestamping)
TSA_URL=http://timestamp.digicert.com
TSA_CERT_PATH=/path/to/tsa-cert.pem

# API Configuration
API_PORT=4000
LOG_LEVEL=info
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long

# Setup Configuration
SETUP_TEST_TENANT=false
TEST_TENANT_ID=test-tenant
