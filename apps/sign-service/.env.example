# Service Configuration
NODE_ENV=production
PORT=3001
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/sign-service.log

# CredLink SDK Configuration
CREDLINK_API_KEY=your-credlink-api-key-here
CREDLINK_API_URL=https://api.credlink.com

# Certificate Configuration
SIGNING_CERTIFICATE=./certs/signing-cert.pem
SIGNING_KEY_PATH=./certs/signing-key.pem
SIGNING_CERTIFICATE_DATA=-----BEGIN CERTIFICATE-----...
SIGNING_KEY_DATA=-----BEGIN PRIVATE KEY-----...

# Additional Certificates (JSON format)
ADDITIONAL_CERTIFICATES=[{"name":"Secondary Cert","issuer":"CredLink CA","validFrom":"2024-01-01T00:00:00Z","validUntil":"2025-01-01T00:00:00Z","algorithm":"RSA-2048"}]

# Security Configuration
CORS_ALLOWED_ORIGINS=https://yourapp.com,https://app.yourdomain.com
API_KEY_REQUIRED=true
MAX_REQUEST_SIZE=50mb

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BATCH_RATE_LIMIT_MAX_REQUESTS=10

# Performance Configuration
MAX_CONCURRENT_BATCH_REQUESTS=5
DEFAULT_REQUEST_TIMEOUT_MS=30000
BATCH_REQUEST_TIMEOUT_MS=60000

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL_MS=30000

# Vercel Deployment Configuration
VERCEL_ENV=production
VERCEL_REGION=us-east-1
