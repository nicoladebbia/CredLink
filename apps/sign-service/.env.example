# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE_MB=50

# C2PA Configuration
SIGNING_CERTIFICATE=./certs/signing-cert.pem
SIGNING_PRIVATE_KEY=./certs/signing-key.pem
TIMESTAMP_AUTHORITY_URL=http://timestamp.digicert.com
USE_REAL_C2PA=false

# AWS KMS (Production Only)
AWS_REGION=us-east-1
KMS_KEY_ID=
ENCRYPTED_PRIVATE_KEY=

# Proof Storage
USE_LOCAL_PROOF_STORAGE=true
PROOF_STORAGE_PATH=./proofs
PROOF_STORAGE_TYPE=local
CLOUD_PROVIDER=
CLOUD_BUCKET_NAME=

# Database (for later implementation)
DATABASE_URL=postgresql://localhost:5432/credlink

# Redis (for caching, later)
REDIS_URL=redis://localhost:6379
