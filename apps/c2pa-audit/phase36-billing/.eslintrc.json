{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended"
  ],
  "root": true,
  "env": {
    "node": true,
    "es2022": true
  },
  "rules": {
    "no-unused-vars": "error",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "warn",
    "no-debugger": "error",
    "no-alert": "error",
    "no-empty": "error",
    "prefer-template": "error",
    "no-loop-func": "error",
    "no-inner-declarations": "error"
  }
}
