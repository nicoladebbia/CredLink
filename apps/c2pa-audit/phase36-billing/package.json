{
  "name": "@c2pa/billing",
  "version": "1.1.0",
  "description": "Phase 36 - Self-Serve Onboarding & Billing with Stripe Integration",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:security": "npm audit --audit-level=moderate && npm run lint",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm outdated && npm audit --audit-level=high",
    "security:fix": "npm audit fix --audit-level=moderate",
    "precommit": "npm run lint && npm run test:security",
    "prepush": "npm run build && npm run test:security && npm run security:audit",
    "observability:start": "node dist/otel-collector.js",
    "observability:dev": "ts-node src/otel-collector.ts",
    "slo:validate": "ts-node scripts/validate-slos.ts",
    "dashboards:generate": "ts-node scripts/generate-dashboards.ts",
    "gameday:run": "ts-node scripts/gameday.ts",
    "metrics:export": "curl http://localhost:9464/metrics",
    "traces:query": "ts-node scripts/query-traces.ts",
    "health:check": "curl -f http://localhost:3002/health || exit 1",
    "docker:build": "docker build -t c2pa-billing:latest .",
    "docker:scan": "docker scan c2pa-billing:latest",
    "deps:update": "npm update && npm audit fix --audit-level=moderate"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/static": "^7.0.0",
    "@fastify/websocket": "^10.0.1",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.45.0",
    "@opentelemetry/exporter-otlp-http": "^0.26.0",
    "@opentelemetry/exporter-otlp-proto": "^0.26.0",
    "@opentelemetry/exporter-prometheus": "^0.26.0",
    "@opentelemetry/instrumentation-fastify": "^0.33.0",
    "@opentelemetry/instrumentation-fs": "^0.26.0",
    "@opentelemetry/instrumentation-http": "^0.45.0",
    "@opentelemetry/instrumentation-ioredis": "^0.37.0",
    "@opentelemetry/propagator-b3": "^1.21.0",
    "@opentelemetry/propagator-jaeger": "^1.21.0",
    "@opentelemetry/resource-detector-aws": "^1.3.4",
    "@opentelemetry/resource-detector-azure": "^0.2.1",
    "@opentelemetry/resource-detector-gcp": "^0.29.0",
    "@opentelemetry/sdk-logs": "^0.45.0",
    "@opentelemetry/sdk-metrics": "^1.21.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/sdk-trace-node": "^1.21.0",
    "@opentelemetry/semantic-conventions": "^1.21.0",
    "@types/ioredis": "^4.28.10",
    "@types/stripe": "^8.0.416",
    "archiver": "^6.0.1",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "csv-writer": "^1.6.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "fastify": "^4.24.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pino": "^10.1.0",
    "pino-pretty": "^10.3.1",
    "puppeteer": "^24.28.0",
    "sharp": "^0.32.6",
    "stripe": "^16.12.0",
    "tar": "^6.2.0",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.201",
    "@types/node": "^20.8.10",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.4",
    "@types/supertest": "^2.0.16",
    "@types/tar": "^6.1.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-v8": "^4.0.6",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^4.0.6"
  },
  "keywords": [
    "c2pa",
    "billing",
    "stripe",
    "onboarding",
    "tenant",
    "api-keys",
    "usage-metering",
    "content-authenticity",
    "security",
    "payment-processing"
  ],
  "author": "C2PA Concierge Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/c2pa/concierge.git",
    "directory": "apps/c2pa-audit/phase36-billing"
  },
  "bugs": {
    "url": "https://github.com/c2pa/concierge/issues"
  },
  "homepage": "https://github.com/c2pa/concierge#readme",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
