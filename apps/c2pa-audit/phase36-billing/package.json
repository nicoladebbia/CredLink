{
  "name": "@c2pa/billing",
  "version": "1.1.0",
  "description": "Phase 36 - Self-Serve Onboarding & Billing with Stripe Integration",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:exit": "vitest run tests/phase38-exit-tests.ts",
    "test:security": "vitest run tests/security/",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "format": "prettier --write \"src/**/*.ts\"",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix --audit-level=moderate",
    "pen-test:prepare": "node scripts/prepare-pentest.js",
    "abuse:dashboard": "node scripts/abuse-dashboard.js",
    "evidence:verify": "node scripts/verify-evidence.js",
    "docker:build": "docker build -t c2pa-billing-phase38 .",
    "docker:run": "docker run -p 3002:3002 c2pa-billing-phase38",
    "metrics:export": "curl http://localhost:9464/metrics",
    "traces:query": "ts-node scripts/query-traces.ts",
    "health:check": "curl -f http://localhost:3002/health || exit 1",
    "docker:scan": "docker scan c2pa-billing:latest",
    "deps:update": "npm update && npm audit fix --audit-level=moderate"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.454.0",
    "@aws-sdk/s3-request-presigner": "^3.454.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/static": "^7.0.0",
    "@fastify/websocket": "^10.0.1",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/auto-instrumentations-node": "^0.45.0",
    "@opentelemetry/exporter-otlp-http": "^0.26.0",
    "@opentelemetry/exporter-prometheus": "^0.41.2",
    "@opentelemetry/instrumentation": "^0.41.2",
    "@opentelemetry/propagator-b3": "^1.8.0",
    "@opentelemetry/resources": "^1.18.1",
    "@opentelemetry/sdk-metrics": "^1.18.1",
    "@opentelemetry/sdk-node": "^0.41.2",
    "@opentelemetry/sdk-trace-base": "^1.18.1",
    "@opentelemetry/sdk-trace-node": "^1.8.0",
    "@opentelemetry/semantic-conventions": "^1.18.1",
    "axios": "^1.6.0",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pino": "^10.1.0",
    "puppeteer": "^24.28.0",
    "stripe": "^16.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.201",
    "@types/node": "^20.8.10",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.4",
    "@types/supertest": "^2.0.16",
    "@types/tar": "^6.1.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-v8": "^4.0.6",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^4.0.6"
  },
  "keywords": [
    "c2pa",
    "billing",
    "stripe",
    "onboarding",
    "tenant",
    "api-keys",
    "usage-metering",
    "content-authenticity",
    "security",
    "payment-processing"
  ],
  "author": "C2PA Concierge Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/c2pa/concierge.git",
    "directory": "apps/c2pa-audit/phase36-billing"
  },
  "bugs": {
    "url": "https://github.com/c2pa/concierge/issues"
  },
  "homepage": "https://github.com/c2pa/concierge#readme",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
