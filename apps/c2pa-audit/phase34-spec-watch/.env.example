# Phase 34 Spec Watch System - Environment Configuration
# C2PA Specification Tracking and Contribution System v1.1.0

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development
LOG_LEVEL=info

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_OWNER=c2pa-org
GITHUB_REPO=specifications

# API Authentication
API_KEY=your_super_secure_32_character_minimum_api_key_here

# C2PA Tool Configuration
C2PATOOL_PATH=c2patool
VERIFY_TOOL_PATH=cai-verify

# Notification Configuration
SLACK_WEBHOOK_URL=
EMAIL_RECIPIENTS=admin@example.com,team@example.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@c2pa-spec-watch.com

# Security Configuration
ENABLE_SECURITY_HEADERS=true
RATE_LIMIT_WINDOW=3600000
MAX_REQUESTS_PER_WINDOW=1000

# Watch Configuration
WATCH_INTERVAL_HOURS=24
GAUNTLET_ENABLED=true
GAUNTLET_TIMEOUT_MS=300000
GAUNTLET_PARALLEL_JOBS=4
QUARTERLY_REPORT_ENABLED=true
QUARTERLY_REPORT_DELIVERY_DAY=30

# Artifact Storage
ARTIFACTS_BASE_PATH=./artifacts
ARTIFACTS_RETENTION_DAYS=90

# Development Overrides
SKIP_GITHUB_SUBMISSION=true
AUTO_EMAIL_NOTIFICATIONS=false
DEBUG_WATCH_TARGETS=false
