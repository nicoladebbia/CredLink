# C2PA Audit Tool Configuration

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Trust Anchors Configuration
TRUST_ANCHORS_PATH=./config/trust-anchors.pem
TRUST_ANCHORS_REFRESH_INTERVAL=3600000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
MAX_FILE_SIZE=104857600
MAX_REQUEST_SIZE=10485760
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000
ENABLE_CORS=true
CORS_ORIGIN=https://yourdomain.com
ALLOWED_FILE_TYPES=.c2pa,.json,.jpg,.jpeg,.png,.webp,.mp4,.mov
REQUEST_TIMEOUT=30000
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
BLOCK_PRIVATE_IPS=true

# Performance Configuration
MAX_MANIFEST_SIZE=10485760
MAX_LINEAGE_DEPTH=20
VALIDATION_TIMEOUT=30000
CANONICALIZATION_CACHE_SIZE=1000

# API Configuration
API_VERSION=v1
API_PREFIX=/api
ENABLE_METRICS=true
METRICS_PORT=9090

# Database Configuration (for caching)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# External Service Configuration
C2PA_TOOL_PATH=/usr/local/bin/c2patool
EXTERNAL_VALIDATION_SERVICE=https://validation.example.com

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_VALIDATION=false
ENABLE_ADVANCED_LINEAGE=true

# Monitoring and Observability
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_ENDPOINT=http://localhost:9090
