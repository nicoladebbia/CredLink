{
  "name": "@c2-concierge/c2pa-audit",
  "version": "1.0.0",
  "description": "Forensic-grade C2PA manifest diff and lineage tool",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bash scripts/build.sh",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:security": "vitest run --grep security",
    "test:phase32": "tsx src/tests/phase32-acceptance.test.ts",
    "cli": "tsx src/cli/index.ts",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json,md}",
    "typecheck": "tsc --noEmit",
    "security:audit": "bash scripts/security-audit.sh",
    "precommit": "pnpm lint && pnpm typecheck && pnpm test",
    "prepublishOnly": "pnpm build && pnpm test && pnpm security:audit"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.1.0",
    "@fastify/static": "^7.0.3",
    "fastify": "^4.26.2",
    "jcs": "^0.0.1",
    "json-merge-patch": "^1.0.2",
    "json-patch": "^0.7.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "zod": "^3.22.4",
    "node-forge": "^1.3.1",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/json-merge-patch": "^0.0.9",
    "@types/node-forge": "^1.3.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "tsc-alias": "^1.8.8",
    "vitest": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@types/axios": "^0.14.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "c2pa",
    "provenance",
    "manifest",
    "diff",
    "audit",
    "lineage",
    "contentauthenticity",
    "license-enforcement",
    "copyright",
    "webhooks",
    "creative-commons"
  ],
  "author": "C2 Concierge Team",
  "license": "MIT"
}
