# CORS Configuration
ALLOWED_ORIGINS=https://localhost:3000,https://localhost:8080

# Performance Configuration
REQUEST_TIMEOUT=30000
BODY_LIMIT=1048576

# Security Headers
ENABLE_CSP_REPORT_ONLY=false
