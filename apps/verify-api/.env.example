# C2PA Verify API Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# Security Configuration
C2PA_PRODUCTION_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEA1234567890abcdef...
-----END PUBLIC KEY-----"
C2PA_PRODUCTION_KEY_EXPIRES=2025-12-31T23:59:59Z

# Rate Limiting
RATE_LIMIT_MAX=100

# CORS Configuration
ALLOWED_ORIGINS=https://localhost:3000,https://localhost:8080

# Performance Configuration
REQUEST_TIMEOUT=30000
BODY_LIMIT=1048576

# Security Headers
ENABLE_CSP_REPORT_ONLY=false

# === SIGNING CONFIGURATION ===
SIGNING_KEY_ID=demo-key-1
SIGNING_ORG=CredLink Demo

# Cryptographic Signing (Day 8-9 Enhancement)
# Set to 'false' to use mock signatures for development
USE_REAL_CRYPTO=true

# TSA (Timestamp Authority) Integration
# Set to 'true' to enable RFC-3161 trusted timestamps
USE_TSA=false
TSA_ENDPOINT=http://localhost:3002/tsa/sign

# === STORAGE CONFIGURATION ===
# Storage type: 'local' (default) or 'r2' (Cloudflare R2)
# If R2 credentials are not set, local filesystem storage will be used automatically

# Cloudflare R2 Configuration (optional - leave empty to use local storage)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=credlink-manifests
R2_PUBLIC_URL=https://manifests.credlink.com

# Local Storage Configuration (used when R2 is not configured)
# Manifests will be stored in: .local-storage/manifests/
# This is automatically created if it doesn't exist

# Manifest Base URL
# For local storage: http://localhost:3001/manifests
# For R2 storage: https://manifests.credlink.com
MANIFEST_BASE_URL=http://localhost:3001/manifests

# === CLOUDFLARE R2 SETUP INSTRUCTIONS ===
# 
# To use Cloudflare R2 instead of local storage:
#
# 1. Create a Cloudflare R2 bucket:
#    - Log in to Cloudflare Dashboard
#    - Go to R2 > Create bucket
#    - Name it "credlink-manifests" (or your preferred name)
#
# 2. Create R2 API tokens:
#    - Go to R2 > Manage R2 API Tokens
#    - Create API token with "Object Read & Write" permissions
#    - Copy the Access Key ID and Secret Access Key
#
# 3. Get your Account ID:
#    - Found in Cloudflare Dashboard URL or R2 overview page
#
# 4. Set up custom domain (optional but recommended):
#    - Go to your R2 bucket settings
#    - Add a custom domain (e.g., manifests.credlink.com)
#    - Update R2_PUBLIC_URL with your custom domain
#
# 5. Configure CORS for your bucket:
#    - Allow GET requests from your application domains
#    - Set appropriate cache headers

