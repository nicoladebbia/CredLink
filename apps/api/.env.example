# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info
SERVICE_NAME=sign-service

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE_MB=50

# ✅ API Key Authentication
ENABLE_API_KEY_AUTH=false
# Format: key1:client1:ClientName,key2:client2:ClientName2
API_KEYS=

# ✅ Sentry Error Tracking
ENABLE_SENTRY=false
SENTRY_DSN=
SENTRY_RELEASE=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_SEND_IN_DEV=false

# ✅ Prometheus Metrics
ENABLE_DEFAULT_METRICS=true

# C2PA Configuration
SIGNING_CERTIFICATE=./certs/signing-cert.pem
SIGNING_PRIVATE_KEY=./certs/signing-key.pem
TIMESTAMP_AUTHORITY_URL=http://timestamp.digicert.com
# ✅ Enable real C2PA library integration
USE_REAL_C2PA=false

# AWS KMS (Production Only)
AWS_REGION=us-east-1
KMS_KEY_ID=
ENCRYPTED_PRIVATE_KEY=

# Proof Storage Configuration
# Local filesystem
USE_LOCAL_PROOF_STORAGE=false
PROOF_STORAGE_PATH=./proofs
PROOF_URI_DOMAIN=https://proofs.credlink.com

# ✅ S3 Storage (production)
USE_S3_PROOF_STORAGE=false
S3_PROOF_BUCKET=credlink-proofs
S3_PROOF_PREFIX=proofs/
# AWS credentials from environment or IAM role

# Database (for later implementation)
DATABASE_URL=postgresql://localhost:5432/credlink

# Redis (for caching, later)
REDIS_URL=redis://localhost:6379
