{
  "name": "@credlink/api",
  "version": "1.0.0",
  "description": "CredLink Unified API - C2PA signing and verification",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ENCRYPTION_KEY=test-key-32-chars-long-here NODE_ENV=development node dist/index.js",
    "dev:watch": "nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:survival": "jest --testPathPattern=survival",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "cli:bulk-sign": "ts-node scripts/bulk-sign.ts",
    "cli:batch-sign": "ts-node src/cli/batch-sign.ts",
    "cli:validate-config": "ts-node scripts/validate-config.ts",
    "cli:generate-cert": "ts-node scripts/generate-cert.ts",
    "cli:migrate-storage": "ts-node scripts/migrate-storage.ts",
    "analyze:deps": "ts-node scripts/analyze-deps.ts",
    "clean": "rm -rf dist node_modules coverage .turbo",
    "clean:deps": "rm -rf node_modules pnpm-lock.yaml && pnpm install"
  },
  "keywords": [
    "c2pa",
    "signing",
    "credlink",
    "provenance"
  ],
  "author": "CredLink",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-acm-pca": "^3.931.0",
    "@aws-sdk/client-kms": "^3.450.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/client-secrets-manager": "^3.931.0",
    "@aws-sdk/client-sns": "^3.931.0",
    "@aws-sdk/s3-request-presigner": "^3.928.0",
    "@contentauth/c2pa-node": "^0.3.0",
    "@credlink/cache": "workspace:*",
    "@credlink/config": "workspace:*",
    "@credlink/health": "workspace:*",
    "@credlink/policy": "workspace:*",
    "@credlink/rbac": "workspace:*",
    "@credlink/security-monitor": "workspace:*",
    "@credlink/storage": "workspace:*",
    "@sentry/node": "^7.99.0",
    "@sentry/profiling-node": "^1.3.3",
    "@types/compression": "^1.8.1",
    "@types/express-session": "^1.18.2",
    "@types/pg": "^8.15.6",
    "axios": "^1.13.2",
    "cbor": "^10.0.11",
    "commander": "^11.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exif-parser": "^0.1.12",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "fast-xml-parser": "^5.3.1",
    "glob": "^10.3.10",
    "helmet": "^7.1.0",
    "ipaddr.js": "^2.2.0",
    "isomorphic-dompurify": "^2.32.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.2",
    "morgan": "^1.10.1",
    "multer": "1.4.5-lts.2",
    "pdf-lib": "^1.17.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.0",
    "redis": "^4.7.1",
    "selfsigned": "^4.0.0",
    "sharp": "^0.33.5",
    "stripe": "^20.0.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "yamljs": "^0.3.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "@types/yamljs": "^0.2.34",
    "babel-jest": "^30.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "sharp": "^0.33.0"
    }
  }
}
