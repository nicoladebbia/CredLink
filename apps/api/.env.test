# Test Environment Configuration
NODE_ENV=test
PORT=3001
APP_NAME=credlink-api-test

# Test Authentication
API_KEYS=test-key-1,test-key-2
ENABLE_API_KEY_AUTH=false

# Test Rate Limiting (disabled for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Test File Processing
MAX_FILE_SIZE_MB=11

# Test AWS Configuration (mock)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
S3_BUCKET=test-credlink-proofs
S3_PREFIX=test-proofs/
KMS_KEY_ID=test-key-id

# Test Certificate Management
SIGNING_CERTIFICATE=fixtures/certificates/signing-cert.pem
SIGNING_PRIVATE_KEY=fixtures/certificates/signing-key.pem

# Test Storage Configuration (use memory for tests)
STORAGE_BACKEND=memory
USE_LOCAL_PROOF_STORAGE=false
PROOF_STORAGE_PATH=./test-proofs
PROOF_URI_DOMAIN=https://test.proofs.credlink.com

# Test Logging
LOG_LEVEL=error
ENABLE_DEFAULT_METRICS=false

# Test C2PA Configuration
USE_REAL_C2PA=false

# Test Database
DATABASE_URL=postgresql://test:test@localhost:5432/credlink_test
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/credlink_test

# Test Encryption Key - Use environment variable in CI/CD
# ENCRYPTION_KEY should be set in test environment
# For local testing: export ENCRYPTION_KEY=test-key-32-chars-long-here!

# Test DynamoDB (disabled)
DYNAMODB_TABLE=test-credlink-proofs
DYNAMODB_REGION=us-east-1

# Test Development Configuration
MAX_EMBED_SIZE_MB=5
REQUIRE_MANIFEST_HASH=true

# Test Encryption Keys
TEST_ENCRYPTION_KEY=test-key-32-chars-long-here!
ENCRYPTION_KEY=test-key-32-chars-long-here!
