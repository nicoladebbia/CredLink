{
  "name": "@credlink/c2-badge",
  "version": "0.1.0",
  "description": "C2PA Verification Badge Web Component",
  "type": "module",
  "main": "dist/c2-badge.js",
  "types": "dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && npm run build-css && node ./scripts/build.mjs",
    "build-css": "mkdir -p dist && cat src/styles.css > dist/styles.css",
    "dev": "tsc -p tsconfig.json --watch",
    "test": "node --test dist/**/*.test.js",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "c2pa",
    "provenance",
    "verification",
    "web-component",
    "badge",
    "accessibility"
  ],
  "author": "C2 Concierge Team",
  "license": "MIT"
}
