{
  "name": "phase57-globalization-locales",
  "version": "1.2.0",
  "description": "C2PA Globalization & Locales - Internationalization for badge UI, docs, and onboarding across 9 locales with RTL support",
  "type": "module",
  "main": "src/i18n.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:rtl": "jest tests/rtl.test.js",
    "validate:coverage": "node scripts/validate-coverage.js",
    "validate:icu": "node scripts/validate-icu.js",
    "pseudo:generate": "node scripts/generate-pseudo-locale.js",
    "pseudo:test": "node scripts/test-pseudo-locale.js",
    "visual:diff": "node scripts/visual-diff-rtl.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "build": "webpack --mode production",
    "build:locales": "node scripts/build-locales.js",
    "extract:strings": "node scripts/extract-strings.js",
    "sync:translations": "node scripts/sync-translations.js",
    "validate": "npm run lint && npm run test && npm run validate:coverage && npm run validate:icu"
  },
  "keywords": [
    "c2pa",
    "i18n",
    "l10n",
    "globalization",
    "localization",
    "internationalization",
    "rtl",
    "bidi",
    "icu",
    "intl",
    "translations"
  ],
  "author": "C2 Concierge, Inc.",
  "license": "MIT",
  "dependencies": {
    "intl-messageformat": "^10.5.8",
    "@formatjs/intl": "^2.10.0",
    "@formatjs/icu-messageformat-parser": "^2.7.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jsdom": "^24.0.0",
    "playwright": "^1.55.1",
    "prettier": "^3.2.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "config": {
    "supportedLocales": [
      "en",
      "es",
      "pt-BR",
      "fr",
      "de",
      "it",
      "ja",
      "zh-CN",
      "ar"
    ],
    "defaultLocale": "en",
    "coverageThreshold": 0.9,
    "translationProvider": "lokalise",
    "visualDiffThreshold": 0.01
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nickiller04/c2-concierge.git",
    "directory": "phase57-globalization-locales"
  },
  "bugs": {
    "url": "https://github.com/Nickiller04/c2-concierge/issues"
  },
  "homepage": "https://github.com/Nickiller04/c2-concierge/tree/main/phase57-globalization-locales"
}
