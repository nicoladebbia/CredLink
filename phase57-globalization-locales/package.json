{
  "name": "phase57-globalization-locales",
  "version": "1.2.0",
  "description": "Phase 57 - Globalization & Locales: BCP-47 + ICU MessageFormat + RTL support",
  "type": "commonjs",
  "main": "src/i18n.js",
  "scripts": {
    "test": "jest",
    "test:rtl": "jest tests/rtl.test.js",
    "validate:coverage": "node scripts/validate-coverage.js",
    "validate:icu": "node scripts/validate-icu.js",
    "pseudo:generate": "node scripts/generate-pseudo-locale.js",
    "pseudo:test": "node scripts/test-pseudo-localization.js",
    "visual:diff": "node scripts/visual-diff-rtl.js",
    "lint": "eslint src/**/*.js tests/**/*.js scripts/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js scripts/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" \"scripts/**/*.js\"",
    "build": "node scripts/build.js"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "globalization",
    "locales",
    "rtl",
    "icu",
    "c2pa",
    "content-credentials"
  ],
  "author": "C2PA Concierge Team",
  "license": "MIT",
  "dependencies": {
    "intl-messageformat": "^10.5.0",
    "@formatjs/intl-locale": "^3.4.0",
    "@formatjs/intl-numberformat": "^8.3.0",
    "@formatjs/intl-datetimeformat": "^6.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.1.0",
    "jsdom": "^23.0.1",
    "playwright": "^1.40.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "config": {
    "supportedLocales": [
      "en",
      "es",
      "pt-BR",
      "fr",
      "de",
      "it",
      "ja",
      "zh-CN",
      "ar"
    ],
    "defaultLocale": "en",
    "coverageThreshold": 0.9,
    "translationProvider": "lokalise",
    "visualDiffThreshold": 0.01
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nickiller04/c2-concierge.git",
    "directory": "phase57-globalization-locales"
  },
  "bugs": {
    "url": "https://github.com/Nickiller04/c2-concierge/issues"
  },
  "homepage": "https://github.com/Nickiller04/c2-concierge/tree/main/phase57-globalization-locales"
}
