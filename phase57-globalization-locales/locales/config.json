  "defaultLocale": "en",
  "fallbackChain": {
    "zh-CN": ["zh", "en"],
    "pt-BR": ["pt", "en"],
    "ar": ["en"]
  },
  "rtlLocales": ["ar"],
  "coverageThreshold": 0.9,
  "translationMemory": {
    "enabled": true,
    "provider": "lokalise",
    "autoSync": true,
    "professionalReviewRequired": ["legal", "compliance", "terms"]
  },
  "fonts": {
    "primary": "Noto Sans",
    "fallback": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
    "subsets": {
      "latin": "noto-sans-latin.woff2",
      "latin-ext": "noto-sans-latin-ext.woff2",
      "japanese": "noto-sans-jp.woff2",
      "chinese-simplified": "noto-sans-sc.woff2",
      "arabic": "noto-sans-arabic.woff2"
    },
    "display": "swap",
    "preload": true
  },
  "qa": {
    "pseudoLocalization": {
      "enabled": true,
      "expansion": 1.3,
      "prefix": "[!!",
      "suffix": "!!]",
      "accentChars": true,
      "bidiStress": true
    },
    "visualDiff": {
      "enabled": true,
      "rtlLocales": ["ar"],
      "viewports": ["mobile", "tablet", "desktop"],
      "threshold": 0.01
    },
    "accessibilityChecks": {
      "langAttribute": true,
      "langOfParts": true,
      "wcag21Level": "AA"
    }
  },
  "seo": {
    "hreflang": {
      "enabled": true,
      "xDefault": "en",
      "includeInSitemap": true
    },
    "canonicalPerLocale": true
  }
}
