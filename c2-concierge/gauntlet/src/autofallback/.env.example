# C2 Auto-Fallback System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Core Configuration
REMOTE_ONLY_DEFAULT=0
WINDOW_SECS=300
SCORE_THRESHOLD=100
SCORE_RESTORE=80
BADGE_REQUIRED=1

# Security (REQUIRED)
ADMIN_TOKEN=your-secure-admin-token-here
HMAC_SECRET=your-hmac-secret-key-here

# Infrastructure (REQUIRED)
TENANT_ID=your-tenant-id
MANIFEST_BASE=https://cdn.example.com

# External Integrations (Optional)
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key
PAGERDUTY_API_TOKEN=your-pagerduty-api-token
PAGERDUTY_SERVICE_ID=your-pagerduty-service-id
PAGERDUTY_ESCALATION_POLICY_ID=your-pagerduty-escalation-policy-id

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=#alerts

# Monitoring (Optional)
PROMETHEUS_URL=http://localhost:9091
GRAFANA_URL=http://localhost:3000
DATADOG_API_KEY=your-datadog-api-key
NEWRELIC_API_KEY=your-newrelic-api-key

# Logging (Optional)
LOG_LEVEL=info
REMOTE_LOG_ENDPOINT=https://logs.credlink.io/ingest

# Backup Configuration (Optional)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_COMPRESSION=true

# Development/Debug (Optional)
DEBUG=false
NODE_ENV=production
