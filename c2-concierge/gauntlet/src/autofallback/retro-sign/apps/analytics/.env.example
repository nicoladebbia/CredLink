# Phase 13 Analytics - Environment Configuration
# Copy this file to .env and update values for your environment

# Server Configuration
HOST=0.0.0.0
PORT=3002
NODE_ENV=development

# ClickHouse Database Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=analytics
CLICKHOUSE_PASSWORD=analytics123
CLICKHOUSE_DATABASE=c2pa_analytics

# Alert Configuration
ALERTS_ENABLED=false
ALERTS_CHECK_INTERVAL=60
ALERTS_CONFIG_PATH=./src/config/alerts.yaml

# Logging Configuration
LOG_LEVEL=info

# Cloudflare R2 Storage (for reports)
R2_ENDPOINT=https://r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=c2pa-analytics

# Email Notifications (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=C2PA Analytics <alerts@c2pa.example.com>

# Slack Notifications
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_DEFAULT_CHANNEL=#alerts

# Fallback Enforcement (Phase 6 Integration)
FALLBACK_API_URL=http://localhost:3000/api/v1/routes
SERVICE_TOKEN=your-service-token-for-fallback-api
AUTO_RESOLVE_HOURS=24

# Development Overrides
# For local development with Docker Compose:
# CLICKHOUSE_HOST=clickhouse
# SMTP_HOST=mailhog
# SMTP_PORT=1025

# Production Overrides
# NODE_ENV=production
# LOG_LEVEL=warn
# ALERTS_ENABLED=true
# ALERTS_CHECK_INTERVAL=30
