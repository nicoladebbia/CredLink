# C2 Concierge Retro-Sign Environment Configuration
# Phase 10 Video & Audio v1 Implementation

# API Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# C2PA Configuration
C2PA_MANIFEST_CDN=https://manifests.c2pa.example.com
C2PA_TOLERANCE_PTS=0.5
C2PA_CACHE_MAX_AGE=300000
C2PA_CACHE_STALE_WHILE_REVALIDATE=86400000

# Security Configuration
SECURITY_SESSION_TIMEOUT=3600
SECURITY_MAX_FAILED_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION=900
SECURITY_AUDIT_RETENTION_DAYS=365
C2PA_SIGNATURE_ALGORITHM=ES256
C2PA_ISSUER=c2c.example/tenants/demo
C2PA_DENIED_ASSERTIONS=c2pa.location.precise

# Demo Configuration
DEMO_HLS_URL=https://demo-cdn.c2pa.example.com/stream/master.m3u8
DEMO_AUDIO_WAV_URL=https://demo-cdn.c2pa.example.com/audio/sample.wav
DEMO_AUDIO_FLAC_URL=https://demo-cdn.c2pa.example.com/audio/sample.flac
DEMO_AUDIO_MP3_URL=https://demo-cdn.c2pa.example.com/audio/sample.mp3

# Database Configuration (for existing Rust components)
DATABASE_URL=sqlite:.state/c2c-checkpoint.sqlite

# AWS Configuration (for existing Rust components)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_S3_BUCKET=your-s3-bucket-name

# Performance Configuration
PERFORMANCE_CACHE_SIZE=1000
PERFORMANCE_POOL_SIZE=10
PERFORMANCE_POOL_TIMEOUT=30
VERIFY_CACHE_SIZE=100
VERIFY_TIMEOUT=5000
WORKER_POOL_SIZE=4

# Logging Configuration
RUST_LOG=info
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/c2c.log

# Metrics Configuration
METRICS_PORT=9090
METRICS_ENDPOINT=/metrics
ENABLE_METRICS=true

# Application Configuration
C2C_TENANT_ID=default
C2C_CONCURRENCY=4
C2C_BATCH_SIZE=100
C2C_TIMEOUT=300

# Feature Flags
ENABLE_CIRCUIT_BREAKER=true
ENABLE_HEALTH_CHECKS=true
ENABLE_SERVICE_WORKER=true
ENABLE_HLS_PLUGIN=true
ENABLE_AUDIO_VERIFICATION=true
