{
  "name": "credlink",
  "version": "1.0.0",
  "description": "C2PA Phase 10 Video & Audio v1 Implementation",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces",
    "start:api": "npm run start --workspace=@c2pa/api",
    "dev:api": "npm run dev --workspace=@c2pa/api",
    "demo:video": "http-server docs/demos/video-hls -p 3000 -c-1 --cors",
    "demo:audio": "http-server docs/demos/audio -p 3001 -c-1 --cors",
    "install:all": "npm install && npm install --workspaces",
    "prepare": "npm run build --workspaces",
    "docker:build": "docker build -t c2-concierge:latest .",
    "docker:run": "docker run -p 3001:3001 -p 3000:3000 -p 9090:9090 c2-concierge:latest",
    "docker:dev": "docker-compose up --build"
  },
  "keywords": [
    "c2pa",
    "video",
    "audio",
    "verification",
    "hls",
    "dash",
    "phase10"
  ],
  "author": "C2PA Team",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "rollup": "^3.20.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "fastify": "^4.15.0",
    "hls.js": "^1.4.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/c2pa/c2-concierge.git"
  },
  "bugs": {
    "url": "https://github.com/c2pa/c2-concierge/issues"
  },
  "homepage": "https://github.com/c2pa/c2-concierge#readme"
}
