{
  "name": "@credlink/ssg-connector",
  "version": "1.0.0",
  "description": "CredLink connector for Static Site Generators with CLI tool and edge recipes",
  "main": "cli/credlink-ssg-sign.js",
  "bin": {
    "credlink-ssg-sign": "./cli/credlink-ssg-sign.js"
  },
  "scripts": {
    "build": "npm run build:cli && npm run build:edge",
    "build:cli": "webpack --mode production --config webpack.cli.config.js",
    "build:edge": "webpack --mode production --config webpack.edge.config.js",
    "start": "node cli/credlink-ssg-sign.js",
    "dev": "nodemon cli/credlink-ssg-sign.js",
    "test": "jest",
    "lint": "eslint **/*.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "c2pa",
    "content-authenticity",
    "ssg",
    "static-site-generator",
    "nextjs",
    "hugo",
    "jekyll",
    "eleventy",
    "astro",
    "cli",
    "edge",
    "cloudflare",
    "vercel"
  ],
  "author": "CredLink Team",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^3.3.2",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "minimatch": "^9.0.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nickiller04/credlink.git",
    "directory": "packages/cms-connectors/ssg"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "cli/",
    "edge/",
    "dist/",
    "README.md",
    "package.json"
  ]
}
