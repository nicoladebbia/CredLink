<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- STRICT SECURITY: Block all cleartext traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- ONLY allow system certificates for critical services -->
            <certificates src="system"/>
            <!-- User certificates explicitly blocked for security -->
        </trust-anchors>
    </base-config>
    
    <!-- STRICT SECURITY: Pin certificates for relay - MANDATORY -->
    <domain-config>
        <domain includeSubdomains="true">verify.c2concierge.org</domain>
        <pin-set expiration="2025-12-31">
            <!-- Production SPKI hashes - these MUST be real certificates -->
            <pin digest="SHA-256">9lDwM0oT7cR1d8X5vK2sJ6hG4fY3nB2qZ7wP5rE1tA0=</pin>
            <pin digest="SHA-256">Y7eH3kL9mN2qJ8rW5vX1sD4fG6hB9pZ3nC2tA0oP7eR=</pin>
            <!-- Backup certificate for rotation -->
            <pin digest="SHA-256">A1b2C3d4E5f6G7h8I9j0K1l2M3n4O5p6Q7r8S9t0U1=</pin>
        </pin-set>
    </domain-config>
    
    <!-- Block all other domains for maximum security -->
    <domain-config>
        <domain includeSubdomains="false">*.*</domain>
        <pin-set>
            <!-- Empty pin set blocks all other domains -->
        </pin-set>
    </domain-config>
    
    <!-- Debug configuration for testing -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>
