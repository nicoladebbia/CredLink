{
  "manifestValidation": {
    "requiredFields": [
      "manifest_version",
      "name",
      "version",
      "description",
      "permissions",
      "background",
      "content_scripts"
    ],
    "manifestVersion": 3,
    "permissions": {
      "allowed": [
        "storage",
        "webRequest", 
        "scripting"
      ],
      "prohibited": [
        "eval",
        "dynamicContent",
        "nativeMessaging"
      ]
    },
    "hostPermissions": {
      "required": ["*://*/*"],
      "optional": ["<all_urls>"]
    },
    "contentSecurityPolicy": {
      "required": "script-src 'self'; object-src 'self'",
      "prohibited": ["unsafe-inline", "unsafe-eval", "data:"]
    },
    "background": {
      "type": "module",
      "serviceWorker": true
    },
    "contentSecurity": {
      "noInlineScripts": true,
      "noEval": true,
      "noRemoteCode": true,
      "shadowDOM": true
    }
  },
  "fileValidation": {
    "requiredFiles": [
      "manifest.json",
      "src/bg.js",
      "src/content.js",
      "popup.html",
      "popup.js",
      "popup.css",
      "lib/parse-link.js"
    ],
    "prohibitedFiles": [
      "*.eval.js",
      "inline-script.html",
      "remote-loader.js"
    ],
    "maxFileSize": {
      "js": 100000,
      "html": 50000,
      "css": 50000,
      "json": 10000
    }
  },
  "codeValidation": {
    "prohibitedPatterns": [
      "eval(",
      "setTimeout(",
      "setInterval(",
      "Function(",
      "document.write(",
      "innerHTML=",
      "outerHTML=",
      "insertAdjacentHTML("
    ],
    "requiredPatterns": [
      "shadowRoot",
      "attachShadow",
      "MutationObserver",
      "chrome.runtime",
      "chrome.tabs"
    ],
    "securityChecks": {
      "xssPrevention": true,
      "htmlEscaping": true,
      "inputValidation": true,
      "urlValidation": true
    }
  },
  "performanceValidation": {
    "maxScanRate": 10,
    "maxBadgesPerPage": 100,
    "cacheSizeLimit": 1000,
    "memoryLimit": 50000000
  },
  "privacyValidation": {
    "noTracking": true,
    "noAnalytics": true,
    "noTelemetryByDefault": true,
    "localStorageOnly": true,
    "optInRequired": true
  },
  "accessibilityValidation": {
    "ariaLabels": true,
    "keyboardNavigation": true,
    "focusManagement": true,
    "colorContrast": true,
    "screenReaderSupport": true
  }
}
