{
  "name": "@c2concierge/acceptance-tests",
  "version": "1.0.0",
  "description": "C2 Concierge acceptance tests for CMS connectors",
  "main": "acceptance/runner.js",
  "bin": {
    "c2c-acceptance": "./acceptance/runner.js"
  },
  "scripts": {
    "test": "node acceptance/runner.js",
    "test:drupal": "node -e \"require('./acceptance/runner.js'); new (require('./acceptance/runner.js')).runPlatformTests('drupal')\"",
    "test:webflow": "node -e \"require('./acceptance/runner.js'); new (require('./acceptance/runner.js')).runPlatformTests('webflow')\"",
    "test:all": "node acceptance/runner.js --platforms drupal,webflow",
    "test:parallel": "node acceptance/runner.js --parallel",
    "test:headed": "node acceptance/runner.js --no-headless",
    "test:report": "node -e \"console.log('Open test-results/acceptance-report.html for detailed report')\"",
    "lint": "eslint **/*.js",
    "clean": "rm -rf test-results"
  },
  "keywords": [
    "c2pa",
    "content-authenticity",
    "acceptance-tests",
    "e2e-tests",
    "playwright",
    "cms",
    "connectors"
  ],
  "author": "C2 Concierge Team",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.1",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "eslint": "^8.57.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nickiller04/c2-concierge.git",
    "directory": "packages/cms-connectors/tests"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "acceptance/",
    "fixtures/",
    "README.md",
    "package.json"
  ]
}
