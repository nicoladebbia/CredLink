{
  "name": "@credlink/tsa-service",
  "version": "1.0.0",
  "description": "RFC 3161/5816 TSA Redundancy & SLAs Service",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:acceptance": "vitest run tests/acceptance",
    "test:openssl-parity": "tsx scripts/test-openssl-parity.ts",
    "test:rfc3161": "vitest run tests/rfc3161",
    "test:etsi": "vitest run tests/etsi",
    "test:sla": "vitest run tests/sla",
    "test:load": "tsx scripts/load-test.ts",
    "test:smoke": "tsx scripts/smoke-test.ts",
    "test:security": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "audit:check": "audit-ci --moderate",
    "validate:policies": "tsx scripts/validate-policies.ts",
    "clean": "rm -rf dist",
    "deploy": "wrangler deploy",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241025.0",
    "hono": "^4.6.7",
    "pino": "^9.5.0",
    "asn1js": "^3.0.5",
    "pvtsutils": "^1.3.5",
    "pkijs": "^3.2.4",
    "webcrypto-core": "^1.7.7",
    "helmet": "^8.0.0",
    "rate-limiter-flexible": "^5.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "typescript": "^5.7.2",
    "wrangler": "^3.88.0",
    "vitest": "^2.1.4",
    "tsx": "^4.19.2",
    "eslint": "^9.14.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "npm-audit-resolver": "^2.0.0",
    "audit-ci": "^7.1.0"
  },
  "keywords": [
    "rfc3161",
    "rfc5816",
    "timestamp",
    "tsa",
    "redundancy",
    "sla",
    "verification"
  ],
  "author": "CredLink Team",
  "license": "MIT"
}
