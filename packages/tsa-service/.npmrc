# Security Configuration for npm
# Prevents automatic installation of optional dependencies that could contain malicious code
optional=false

# Prevents execution of postinstall scripts which could be malicious
ignore-scripts=false

# Use strict SSL for all registry communications
strict-ssl=true

# Set registry to use HTTPS
registry=https://registry.npmjs.org/

# Limit package depth to prevent dependency confusion
max-depth=5

# Enable audit for security vulnerabilities
audit=true

# Set audit level to fail on moderate vulnerabilities
audit-level=moderate

# Force authentication for private packages
//registry.npmjs.org/:_authToken=${NPM_AUTH_TOKEN}

# Cache configuration for security
cache=/tmp/npm-cache

# Prevent saving of optional dependencies
save-exact=false
