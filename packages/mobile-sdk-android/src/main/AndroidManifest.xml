<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.c2concierge.mobile">
    
    <!-- STRICT SECURITY: Network security configuration -->
    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="false"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="false"
        android:debuggable="false"
        android:allowTaskReparenting="false"
        android:hardwareAccelerated="true"
        android:requestLegacyExternalStorage="false"
        android:preserveLegacyExternalStorage="false">
        
        <!-- Share activity for handling shared content - SECURED -->
        <activity
            android:name=".share.ShareActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:configChanges="orientation|screenSize|keyboardHidden">
            
            <!-- RESTRICTED intent filters for sharing - HTTPS ONLY -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
            
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" />
            </intent-filter>
            
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            
            <!-- RESTRICTED intent filter for viewing URLs - HTTPS ONLY -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" />
            </intent-filter>
        </activity>
        
        <!-- Background work for manifest prefetching - RESTRICTED -->
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:foregroundServiceType="shortService"
            android:exported="false"
            tools:node="merge" />
            
    </application>
    
    <!-- MINIMAL REQUIRED permissions only -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Scoped storage permissions - MINIMAL -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    
    <!-- Legacy support with MAX SDK restriction -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    
    <!-- Foreground service for background work - RESTRICTED -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <!-- SECURITY: Block dangerous permissions -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" 
        tools:ignore="QueryAllPackagesPermission" />
    
</manifest>
