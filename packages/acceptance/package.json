{
  "name": "@c2/acceptance",
  "version": "0.1.0",
  "description": "Acceptance harness for hostile-path matrix testing",
  "main": "dist/main.js",
  "type": "module",
  "bin": {
    "acceptance": "bin/acceptance.mjs"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node bin/acceptance.mjs --matrix docs/hostile-path-matrix.yaml --out .artifacts/acceptance",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@c2/utils": "file:../utils",
    "@c2/manifest-store": "file:../manifest-store",
    "yaml": "^2.3.4",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "sharp": "^0.33.0",
    "commander": "^11.1.0",
    "csv-writer": "^1.6.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
