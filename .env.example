# C2 Concierge Environment Configuration
# ===========================================
# CredLink API - Environment Configuration
# ===========================================

# Server Configuration
PORT=3000
NODE_ENV=development
APP_NAME=credlink-api

# ===========================================
# Authentication & Security
# ===========================================

# API Keys (comma-separated for multiple keys)
API_KEYS=dev-key-1,dev-key-2
ENABLE_API_KEY_AUTH=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ===========================================
# File Processing
# ===========================================

# Maximum file size (MB)
MAX_FILE_SIZE_MB=50

# ===========================================
# AWS Configuration
# ===========================================

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# S3 Configuration
S3_BUCKET=credlink-proofs
S3_PREFIX=proofs/

# KMS Configuration (for certificate encryption)
KMS_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/abc-123
ENCRYPTED_PRIVATE_KEY=

# ===========================================
# Certificate Management
# ===========================================

# Local development certificates
SIGNING_CERTIFICATE=fixtures/certificates/signing-cert.pem
SIGNING_PRIVATE_KEY=fixtures/certificates/signing-key.pem

# ===========================================
# Storage Configuration
# ===========================================

# Storage backend: memory, local, s3
STORAGE_BACKEND=memory

# Local filesystem storage
USE_LOCAL_PROOF_STORAGE=false
PROOF_STORAGE_PATH=./proofs

# Proof URI domain
PROOF_URI_DOMAIN=https://proofs.credlink.com

# ===========================================
# Logging & Monitoring
# ===========================================

LOG_LEVEL=info
AWS_CLOUDWATCH_LOG_GROUP=/credlink/api

# Prometheus metrics
ENABLE_DEFAULT_METRICS=true

# Sentry (error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ===========================================
# C2PA Configuration
# ===========================================

# Enable real C2PA signing (vs mock)
USE_REAL_C2PA=true

# ===========================================
# Database (optional)
# ===========================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/credlink

# DynamoDB
DYNAMODB_TABLE=credlink-proofs
DYNAMODB_REGION=us-east-1
MAX_EMBED_SIZE_MB=10
REQUIRE_MANIFEST_HASH=true

# Sandbox Configuration
STRIP_HAPPY_PORT=4101
PRESERVE_EMBED_PORT=4102
REMOTE_ONLY_PORT=4103

# Manifest Configuration
MANIFEST_BASE=https://manifests.survival.test
VERIFY_HOST=https://verify.survival.test

# Development Configuration
NODE_ENV=development
LOG_LEVEL=info
