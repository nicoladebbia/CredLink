{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true
  },
  "include": [
    "core/*/src/**/*",
    "integrations/**/src/**/*",
    "ui/*/src/**/*",
    "tests/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".nyc_output",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts",
    "tests/gauntlet/**/*",
    "**/dist",
    "**/node_modules",
    "**/.artifacts",
    ".artifacts",
    "archive",
    "sandboxes",
    "scripts"
  ],
  "references": [
    {
      "path": "./tests/acceptance"
    },
    {
      "path": "./tests/integration/acceptance-cms"
    }
  ]
}
