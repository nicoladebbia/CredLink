{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true
  },
  "include": [
    "core/*/src/**/*",
    "integrations/**/src/**/*",
    "ui/*/src/**/*",
    "tests/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist",
    "**/node_modules",
    "**/.artifacts",
    ".artifacts",
    "archive",
    "sandboxes",
    "scripts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "references": [
    {
      "path": "./tests/acceptance"
    },
    {
      "path": "./tests/integration/acceptance-cms"
    },
    {
      "path": "./core/utils"
    },
