{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".artifacts",
    "sandboxes",
    "scripts"
  ],
  "references": [
    {
      "path": "./packages/acceptance"
    },
    {
      "path": "./packages/utils"
    },
    {
      "path": "./packages/policy"
    },
    {
      "path": "./packages/manifest-store"
    },
    {
      "path": "./packages/oem-trust"
    },
    {
      "path": "./apps/edge-worker"
    },
    {
      "path": "./apps/manifest-store-worker"
    },
    {
      "path": "./apps/reportgen"
    }
  ]
}
