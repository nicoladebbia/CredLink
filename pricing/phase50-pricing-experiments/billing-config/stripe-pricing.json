  },
  "mid_term_changes": {
    "upgrades": {
      "behavior": "immediate_proration",
      "proration_behavior": "create_prorations",
      "effective_date": "immediate"
    },
    "downgrades": {
      "behavior": "scheduled_next_cycle",
      "proration_behavior": "none",
      "effective_date": "next_billing_cycle"
    },
    "add_ons": {
      "behavior": "immediate_billing",
      "proration_behavior": "create_prorations"
    },
    "cancellations": {
      "behavior": "cancel_at_period_end",
      "refund_policy": "none"
    }
  },
  "alert_configuration": {
    "usage_thresholds": {
      "warning": 0.8,
      "critical": 0.95,
      "exceeded": 1.0
    },
    "notification_channels": {
      "email": {
        "enabled": true,
        "templates": {
          "warning": "usage_warning_80",
          "critical": "usage_critical_95", 
          "exceeded": "usage_exceeded"
        }
      },
      "webhook": {
        "enabled": true,
        "url": "https://api.c2concierge.com/webhooks/usage-alerts",
        "events": ["usage.warning", "usage.critical", "usage.exceeded"]
      },
      "in_app": {
        "enabled": true,
        "display_duration": "until_dismissed"
      }
    }
  },
