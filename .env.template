# Environment Variables Template
# 
# SECURITY: This is a template file - DO NOT use real credentials
# Copy to .env.production and populate with actual values
# Use AWS Secrets Manager for production secrets

# AWS Credentials (Use AWS Secrets Manager in production)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_ACCOUNT_ID=YOUR_AWS_ACCOUNT_ID
AWS_REGION=us-east-1

# AWS Secrets Manager Configuration
AWS_SECRETS_MANAGER_ENABLED=true
AWS_SECRETS_MANAGER_REGION=us-east-1
AWS_SECRETS_MANAGER_PREFIX=credlink/production

# Cloudflare Configuration (Use AWS Secrets Manager in production)
CLOUDFLARE_API_TOKEN=${ssm:credlink/production/cloudflare-api-token}
CLOUDFLARE_ACCOUNT_ID=${ssm:credlink/production/cloudflare-account-id}

# Cloudflare Service Tokens
CLOUDFLARE_STORAGE_TOKEN=${ssm:credlink/production/cloudflare-storage-token}
CLOUDFLARE_WORKER_TOKEN=${ssm:credlink/production/cloudflare-worker-token}
CLOUDFLARE_QUEUE_TOKEN=${ssm:credlink/production/cloudflare-queue-token}
CLOUDFLARE_SERVICE_STORAGE_TOKEN=${ssm:credlink/production/cloudflare-service-storage-token}
CLOUDFLARE_SERVICE_WORKERS_TOKEN=${ssm:credlink/production/cloudflare-service-workers-token}
CLOUDFLARE_SERVICE_QUEUES_TOKEN=${ssm:credlink/production/cloudflare-service-queues-token}

# Application Configuration
NODE_ENV=production
PORT=3001
API_HOST=0.0.0.0

# Database Configuration (Use AWS Secrets Manager in production)
DATABASE_URL=${ssm:credlink/production/database-url}
DB_HOST=${ssm:credlink/production/db-host}
DB_PORT=5432
DB_NAME=credlink_prod
DB_USER=${ssm:credlink/production/db-user}
DB_PASSWORD=${ssm:credlink/production/db-password}
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_STATEMENT_TIMEOUT=5000
DB_QUERY_TIMEOUT=5000
DB_CA_CERT_PATH=/etc/ssl/certs/rds-ca-2019-root.pem

# Redis Configuration (Use AWS Secrets Manager in production)
REDIS_URL=${ssm:credlink/production/redis-url}
REDIS_HOST=${ssm:credlink/production/redis-host}
REDIS_PORT=6379
REDIS_PASSWORD=${ssm:credlink/production/redis-password}

# Security Configuration
ENABLE_IP_WHITELIST=true
ENABLE_CERTIFICATE_VALIDATION=true
TOKEN_TTL_SECONDS=86400
API_KEY_ENABLED=true
API_KEY_HEADER=X-API-Key
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/credlink.crt
SSL_KEY_PATH=/etc/ssl/private/credlink.key

# Storage Configuration
STORAGE_TYPE=r2
STORAGE_BUCKET_NAME=credlink-proofs-production

# Certificate Configuration
CERTIFICATE_DOMAIN=${ssm:credlink/production/certificate-domain}
CERTIFICATE_EMAIL=${ssm:credlink/production/certificate-email}

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/credlink/api.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10
ENABLE_CLOUDTRAIL=true
LOG_RETENTION_DAYS=90

# Service Discovery
SERVICE_NAME=credlink-api
SERVICE_VERSION=1.0.0
SERVICE_REGION=us-east-1
SERVICE_ZONE=us-east-1a

# External Services
MANIFEST_STORE_URL=https://manifest-store.credlink.com
C2PA_SDK_ENDPOINT=https://c2pa.credlink.com
CERTIFICATE_MANAGER_URL=https://cert-manager.credlink.com

# Alert Configuration (Use AWS Secrets Manager in production)
ALERT_SLACK_WEBHOOK_URL=${ssm:credlink/production/slack-webhook-url}
ALERT_PAGERDUTY_SERVICE_KEY=${ssm:credlink/production/pagerduty-service-key}
ALERT_EMAIL_SMTP_HOST=smtp.credlink.com
ALERT_EMAIL_FROM=alerts@credlink.com
ALERT_EMAIL_TO=devops@credlink.com,oncall@credlink.com

# Observability (Use AWS Secrets Manager in production)
SENTRY_DSN=${ssm:credlink/production/sentry-dsn}
DATADOG_API_KEY=${ssm:credlink/production/datadog-api-key}
JAEGER_ENDPOINT=https://jaeger.credlink.com:14268/api/traces

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=300
MAX_CONCURRENT_REQUESTS=1000

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=credlink-backups
BACKUP_RETENTION_DAYS=30
