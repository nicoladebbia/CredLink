{
  "name": "credlink",
  "version": "0.1.0",
  "description": "CredLink: Content authenticity platform with remote-first proof survival",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "echo '⚠️  DEMO IS BROKEN - Backend not implemented' && echo 'See START-HERE.md' && ./start-demo-BROKEN.sh",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:security": "jest --testPathPattern=tests/security",
    "test:performance": "jest --testPathPattern=tests/performance --runInBand",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:acceptance": "node tests/acceptance/bin/acceptance.mjs --matrix docs/hostile-path-matrix.yaml --out .artifacts/acceptance",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules coverage test-results",
    "prepare": "husky install",
    "tools:batch-sign": "cd tools/batch-sign && ts-node batch-sign.ts",
    "tools:generate-certs": "bash tools/generate-certs/generate.sh",
    "tools:migrate-proofs": "cd tools/migrate-proofs && ts-node migrate.ts",
    "bootstrap": "pnpm install && pnpm -r build",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:check": "pnpm audit --json | jq '.vulnerabilities | keys | length'",
    "security:fix": "pnpm audit --fix",
    "security:lock": "pnpm lock --prefer-frozen-lockfile",
    "security:verify": "pnpm verify"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "husky": "^8.0.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "auditConfig": {
      "auditLevel": "moderate",
      "ignoreCves": [],
      "ignoreDevDependencies": false
    },
    "overrides": {
      "semver": "^7.5.2",
      "word-wrap": "^1.2.4",
      "esbuild": "^0.25.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/node"
      ]
    }
  }
}
